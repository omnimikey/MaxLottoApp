<GraphLayout>:
    BoxLayout:
        orientation: 'horizontal'
        id:grph_option
        BoxLayout:
            orientation:'vertical'
            MDTextFieldRect:
                id: x_value
                size_hint: None, None
                width: 600
                height: "30dp"
                background_color: app.theme_cls.bg_normal
                pos_hint: {"center_x": .5, "center_y": 2}
                hint_text: "X"
            MDTextFieldRect:
                id: y_value
                size_hint: None, None
                width: 600
                height: "30dp"
                background_color: app.theme_cls.bg_normal
                pos_hint: {"center_x": .5, "center_y": .7}
                hint_text: "Y"
            MDRaisedButton:
                text: "Generate the graph"
                font_name:"fonts/Roboto-Medium.ttf"
                pos_hint: {"center_x":.5, "center_y": .1}
                on_release: root.gnrt_graph(); root.current = 'graph'
        Screen:
            name: 'graph'
            BoxLayout:
                id: bx
                orientation:'vertical'
                size_hint_y: .9
                pos_hint: {'top':1}

<HomePage>:
    BoxLayout:
        orientation:"vertical"
        Image:
            source: 'images/kivy_background.PNG'
            allow_stretch: True
            keep_ratio: False
     
            Label:
                text: "Lotto Max Data"
                font_name:"fonts/triple_dot_digital-7.ttf"
                center_x: root.width / 2
                center_y: root.height / 1.3
                font_size: 90
            Image:
                source: 'images/lottologo.png'
                center_x: root.width / 2
                center_y: root.height / 2.5
                size_hint_x: None
                size_hint_y: None  # Setting to None to allow custom height
                height: 500  # Custom height
                width: 1000
                allow_stretch: True
            Label:
                text: "Mini Data Analysis\n and Visualization"
                font_name: 'fonts/G7_Cube_5.ttf'
                center_x: root.width / 2
                center_y: root.height /6
            


